<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.job.dao.SyncPushLogDao">

	<select id="queryObject" resultType="io.renren.modules.job.entity.SyncPushLogEntity">
		select * from zq_sync_log where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.modules.job.entity.SyncPushLogEntity">
		select * from zq_sync_log 
		<where>
			<if test="key != null and key.trim() != ''">
				`function_name` like concat('%',#{key},'%')
			</if>
		</where>
		order by id desc 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from zq_sync_log 
		<where>
			<if test="key != null and key.trim() != ''">
				`function_name` like concat('%',#{key},'%')
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="io.renren.modules.job.entity.SyncPushLogEntity" useGeneratedKeys="true" keyProperty="id">
		insert into zq_sync_log
		(
			`url`, 
			`function_name`, 
			`param`, 
			`create_time`,
			`reason`,
			`way`, 
			`result`,
			`result_desc`,
			`remark`
		)
		values
		(
			#{url}, 
			#{functionName}, 
			#{param}, 
			#{createTime}, 
			#{reason},
			#{way},
			#{result},
			#{resultDesc},
			#{remark}
		)
	</insert>
	
	<delete id="delete">
		delete from zq_sync_log where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from zq_sync_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>
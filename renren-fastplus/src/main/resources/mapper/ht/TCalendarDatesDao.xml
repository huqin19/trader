<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.ht.dao.TCalendarDatesDao">
	<select id="queryCode" parameterType="java.util.HashMap" resultType="io.renren.modules.ht.entity.TCalendarDatesEntity" >
		select * from ${tableName} 
		<where>
			<if test="calDay !=null and calDay.trim() != ''">
				where TO_DATE(cal_day,'syyyy-mm-dd') = TO_DATE(#{calDay},'syyyy-mm-dd')
			</if> 
		</where>
	</select> 
	<select id="queryAll" parameterType="java.util.HashMap" resultType="io.renren.modules.ht.entity.TCalendarDatesEntity" >
		select * from ${tableName}
	</select>

	<select id="queryList" parameterType="java.util.HashMap" resultType="io.renren.modules.ht.entity.TCalendarDatesEntity">
		select 
			* 
		from 
		( 
			select 
				rownum rowx, x.* 
			from 
				${tableName} x
			<where>
				<if test="offset != null and limit != null ">
					rownum &lt;= ${offset} + ${limit}
				</if>
			</where>
			order by 
				cal_day,cal_code desc 
		)
		<if test="offset != null ">
			where 
				rowx &gt; ${offset}
		</if>
    </select>
	
    <select id="queryTotal" parameterType="java.util.HashMap" resultType="int">
			select count(1) from ${tableName} 
				<where>
             		<if test="status !=null ">
						status = #{status}
               		</if>
        		</where> 
    </select>
	
	<delete id="deleteAll">
		delete from TCALENDAR_DATES
	</delete>
	<update id="updateStatus"> 
		update TCALENDAR_DATES set status = case when status = 1 then 0 when status = 0 then 1 end
	</update>
	<delete id="deleteStatus">
		delete from TCALENDAR_DATES where status = 0 
	</delete>
	<insert id="save" parameterType="io.renren.modules.ht.entity.TCalendarDatesEntity">
		insert into TCALENDAR_DATES
		(
			cal_code, 
			cal_day, 
			cal_flag,
			status
		)
		values
		(
			#{calCode,jdbcType=VARCHAR}, 
			#{calDay,jdbcType=CHAR}, 
			#{calFlag,jdbcType=INTEGER}, 
			#{status,jdbcType=INTEGER} 	
		)
	</insert>
	<insert id="saveBatch" parameterType="java.util.List">
		insert into TCALENDAR_DATES
		(
			cal_code, 
			cal_day, 
			cal_flag,
			status
		)
	<foreach item="item" collection="list" index="index" separator="union all" >
		(
			select
			#{item.calCode,jdbcType=VARCHAR}, 
			#{item.calDay,jdbcType=CHAR}, 
			#{item.calFlag,jdbcType=INTEGER}, 
			#{item.status,jdbcType=INTEGER} 	
			from dual
			)
		</foreach>
	</insert> 
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.ht.dao.TCalendarDatesDao">
	<select id="queryCode" parameterType="java.util.HashMap" resultType="io.renren.modules.ht.entity.TCalendarDatesEntity" >
		select * from ${tableName} 
		<where>
			<if test="calCode !=null and calCode.trim() != ''">
				where cal_code = #{calCode}
			</if> 
		</where>
	</select> 
	<select id="queryAll" parameterType="java.util.HashMap" resultType="io.renren.modules.ht.entity.TCalendarDatesEntity" >
		select * from ${tableName}
	</select>

	<select id="queryList" parameterType="java.util.HashMap" resultType="io.renren.modules.ht.entity.TCalendarDatesEntity" >
		select * from ${tableName} 
		<where>
			<if test="calDay !=null and calDay.trim() != ''">
				where cal_day like '%${calDay}%'
			</if> 
		</where>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(1) from xir_zx.TCALENDAR_DATES 
		<where>
				cal_day like '%${calDay}%' 
		</where>
	</select>
	
	<delete id="deleteAll">
		delete from TCALENDAR_DATES
	</delete>
	
	<insert id="save" parameterType="io.renren.modules.ht.entity.TCalendarDatesEntity">
		insert into TCALENDAR_DATES
		(
			cal_code, 
			cal_day, 
			cal_flag
		)
		values
		(
			#{calCode,jdbcType=VARCHAR}, 
			#{calDay,jdbcType=CHAR}, 
			#{calFlag,jdbcType=INTEGER} 	
		)
	</insert>
</mapper>